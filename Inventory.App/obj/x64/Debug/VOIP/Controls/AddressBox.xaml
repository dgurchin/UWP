<UserControl x:Class="Linphone.VOIP.Controls.AddressBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="Linphone.VOIP.Controls"
    mc:Ignorable="d"
    d:DesignHeight="100" d:DesignWidth="480">
    <UserControl.Resources>
        <ResourceDictionary Source="ms-appx:///VOIP/VOIPStyles/VOIPStyles.xaml" />
    </UserControl.Resources>
    
    <Grid x:ConnectionId='2' x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBox x:ConnectionId='3' 
            Grid.Column="0"
            x:Name="address"
            Text="{Binding Text}"
            PlaceholderText="Number or address"
            x:Uid="AddressHint"
            VerticalAlignment="Center"
            AcceptsReturn="False"
            InputScope="EmailSmtpAddress"
                                             
            IsSpellCheckEnabled="false">
        </TextBox>

        <Button x:ConnectionId='4' 
            x:Name="Backspace"
            Grid.Column="1"
            Background="Transparent"
            ClickMode="Press" 
            IsEnabled="False"
            Style="{StaticResource ButtonStyle}"
                                     
                                      >
                <FontIcon 
                    FontFamily="Segoe MDL2 Assets" 
                    Glyph="&#xE750;" 
                    FontSize="30"/>
        </Button>
    </Grid>
</UserControl>

