<Page
    x:Class="Linphone.VOIP.Views.InCall"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:linphone="using:Linphone.VOIP.Views"
    xmlns:controls="using:Linphone.VOIP.Controls"
    xmlns:custom="using:Linphone.VOIP.Views"
    Background="{ThemeResource AppBarBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary Source="ms-appx:///VOIP/VOIPStyles/VOIPStyles.xaml" />
    </Page.Resources>

    <Grid x:ConnectionId='2' x:Name="LayoutRoot"                        >
        <Grid x:ConnectionId='3' x:Name="HUD"
              HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid x:ConnectionId='4' x:Name="ContactHeader" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Image Source="/VOIP/Assets/avatar2.png"
                       HorizontalAlignment="Center"
                       Width="60" Height="60" VerticalAlignment="Top"/>

                <TextBlock x:ConnectionId='10'
                    Grid.Row="1"
                    x:Name="Contact"
                    FontSize="18"
                    HorizontalAlignment="Center"
                    Style="{StaticResource TextStyle}"
                    TextWrapping="Wrap"
                    Margin="5,10,5,10"/>

                <TextBlock x:ConnectionId='11'
                    Grid.Row="2"
                    x:Name="Number"
                    Margin="5"
                    Visibility="Collapsed"
                    FontSize="25"/>

                <TextBlock x:ConnectionId='12'
                    Grid.Row="3"
                    x:Name="Status"
                    Text="Dialing ..."
                    x:Uid="Dialing"
                    Style="{StaticResource ListItemStyle}"
                    HorizontalAlignment="Center"
                    Margin="12,0,12,0"
                    FontSize="20" />

                <FontIcon x:ConnectionId='13' 
                    Grid.Row="4"
                    Margin="12"
                    x:Name="statusIcon"
                    FontFamily="Segoe MDL2 Assets" 
                    Glyph="" 
                    RenderTransformOrigin="0.5,0.5"/>
            </Grid>
            
            <controls:CallControlsP x:ConnectionId='5' 
                x:Name="buttons"
                VerticalAlignment="Bottom"
                Visibility="Visible"
                Grid.RowSpan="2"/>

            <!-- Local video media element -->
            <Grid x:ConnectionId='6' Grid.RowSpan="2" x:Name="VideoGrid" Canvas.ZIndex="-1" Background="Black" Visibility="Visible"                      >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <SwapChainPanel x:ConnectionId='7' x:Name="VideoSwapChainPanel" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="3"/>
                <SwapChainPanel x:ConnectionId='8' x:Name="PreviewSwapChainPanel" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="2" Grid.Row="2" RenderTransformOrigin="0.5,0.5">
                    <SwapChainPanel.RenderTransform>
                        <CompositeTransform x:ConnectionId='9' x:Name="PreviewRender" ScaleX="-1"/>
                    </SwapChainPanel.RenderTransform>
                </SwapChainPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>

