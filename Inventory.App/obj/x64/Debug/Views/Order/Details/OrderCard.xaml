<UserControl x:ConnectionId='1'
    x:Class="Inventory.Views.OrderCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Inventory.Controls"
    xmlns:views="using:Inventory.Views"
    mc:Ignorable="d" d:DesignWidth="320" d:DesignHeight="600">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="12">
            <TextBlock>OrderCard.xaml</TextBlock>
            <TextBlock Style="{StaticResource CardHeader}" Text="ID Заказа" />
            <TextBlock x:ConnectionId='2' Style="{StaticResource CardText}"                                      />

            <TextBlock Style="{StaticResource CardHeader}" Text="Статус" />
            <TextBlock x:ConnectionId='3' Style="{StaticResource CardText}"                                               />

            <TextBlock Style="{StaticResource CardHeader}" Text="Дата заказа" />
            <TextBlock x:ConnectionId='4' Style="{StaticResource CardText}"                                                                                                         />

            <TextBlock x:ConnectionId='5' Style="{StaticResource CardHeader}" Text="Мин. сума заказа" 
                                                                                                                                         />
            <TextBlock x:ConnectionId='6' Style="{StaticResource CardText}"                                                                                            
                                                                                                                                         />
            
            <Rectangle Style="{StaticResource CardSeparator}"/>
            <TextBlock Style="{StaticResource CardSection}" Text="Клиент"  />

            <TextBlock Style="{StaticResource CardHeader}" Text="ID клиента" />
            <TextBlock x:ConnectionId='7' Style="{StaticResource CardText}"                                              />

            <TextBlock Style="{StaticResource CardHeader}" Text="Имя" />
            <TextBlock x:ConnectionId='8' Style="{StaticResource CardText}"                                                         />

            <StackPanel x:ConnectionId='9'                                                                                                    >
                <TextBlock Style="{StaticResource CardHeader}" Text="Телефон" />
                <TextBlock x:ConnectionId='14' Style="{StaticResource CardText}"                                                />
            </StackPanel>

            <Rectangle Style="{StaticResource CardSeparator}"/>
            <TextBlock Style="{StaticResource CardSection}" Text="Отправка"  />

            <TextBlock Style="{StaticResource CardHeader}" Text="Тип оплаты" />
            <TextBlock x:ConnectionId='10' Style="{StaticResource CardText}"                                                    />

            <TextBlock Style="{StaticResource CardHeader}" Text="Отправлен с ресторана" />
            <TextBlock x:ConnectionId='11' Style="{StaticResource CardText}"                                                   />

            <TextBlock Style="{StaticResource CardHeader}" Text="Дата доставки" />
            <TextBlock x:ConnectionId='12' Style="{StaticResource CardText}"                                                                                                                />

            <StackPanel Grid.Column="1" Margin="0 15 0 0"  BorderBrush="LightGray" BorderThickness="1">
                <controls:Section Style="{StaticResource DetailsViewSection}" HorizontalAlignment="Left">
                    <views:PhoneCallConnectOrder x:ConnectionId='13' x:Name="callSection"                                                 />
                </controls:Section>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>

