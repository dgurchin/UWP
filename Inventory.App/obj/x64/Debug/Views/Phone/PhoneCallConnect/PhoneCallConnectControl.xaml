<UserControl x:ConnectionId='1'
    x:Class="Inventory.Views.PhoneCallConnectControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Inventory.Services"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="250">
    <Grid>
        <StackPanel Margin="6">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel HorizontalAlignment="Center" Spacing="4">
                    <StackPanel MaxWidth="290">
                        <StackPanel x:ConnectionId='21' x:Name="LayoutRoot" Background="Transparent" Orientation="Horizontal" HorizontalAlignment="Left" Padding="0,1,5,1" VerticalAlignment="Center"                            >
                            <FontIcon x:ConnectionId='24' FontFamily="Segoe MDL2 Assets" Glyph="&#xF137;"                                                               RenderTransformOrigin="0.5,0.5" >
                                <FontIcon.RenderTransform>
                                    <CompositeTransform ScaleX=".75" ScaleY=".75"/>
                                </FontIcon.RenderTransform>
                            </FontIcon>
                            <TextBlock x:ConnectionId='25'                                                   VerticalAlignment="Center" FontSize="10" />
                        </StackPanel>
                        <!--<TextBlock x:Name="StatusText" Text="{x:Bind ViewModel.StatusText, Mode=OneWay}" FontWeight="Medium" FontSize="9" Foreground="{x:Bind ViewModel.StatusTextColor, Mode=OneWay}" VerticalAlignment="Center"></TextBlock>-->
                        <StackPanel x:ConnectionId='22'                                                                                                                >
                            <TextBlock Style="{StaticResource CardSection}" Text="Телефон"  FontSize="12"/>
                            <TextBox x:ConnectionId='23' Header="Номер телефона" Name="PhoneNumber"                                                                                                                 Margin="0,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel x:ConnectionId='2'                                                                                                               >
                        <Button x:ConnectionId='3' Name="ButtonCall" Style="{StaticResource CornerButtonStyle }"                                                                                                                                                        >
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="14"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="Позвонить" Grid.Row="1" HorizontalAlignment="Center"  FontSize="10"/>
                                        <FontIcon Grid.Row="0" FontFamily="Segoe MDL2 Assets" Glyph="&#xE717;" RenderTransformOrigin="0.5,0.5"  Foreground="Green">
                                            <FontIcon.RenderTransform>
                                                <CompositeTransform ScaleX=".75" ScaleY=".75"/>
                                            </FontIcon.RenderTransform>
                                        </FontIcon>
                                    </Grid>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                        <StackPanel x:ConnectionId='4' x:Name="GroupButtonPhone"                                                                                                                 Orientation="Horizontal" Spacing="4" MaxWidth="290">
                            <Button x:ConnectionId='16' Style="{StaticResource CornerButtonStyle }"                                                              Name="ButtonMicrophone"                                             >
                                <Button.ContentTemplate >
                                    <DataTemplate                                       >
                                        <Grid Width="50">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="20"/>
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="Микрофон" Grid.Row="1" HorizontalAlignment="Center" FontSize="10" />
                                            <Viewbox Grid.Row="0">
                                                <FontIcon Grid.Row="0" FontFamily="Segoe MDL2 Assets" Glyph="&#xF12E;" RenderTransformOrigin="0.5,0.5" >
                                                    <FontIcon.RenderTransform>
                                                        <CompositeTransform ScaleX=".75" ScaleY=".75"/>
                                                    </FontIcon.RenderTransform>
                                                </FontIcon>
                                            </Viewbox>
                                        </Grid>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>
                            <Button x:ConnectionId='17' Style="{StaticResource CornerButtonStyle }"                                          >
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="20"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="Положить" Grid.Row="1" HorizontalAlignment="Center"  FontSize="10"/>
                                            <FontIcon Grid.Column="1" FontFamily="Segoe MDL2 Assets" Glyph="&#xE778;" RenderTransformOrigin="0.5,0.5" Foreground="Red">
                                                <FontIcon.RenderTransform>
                                                    <CompositeTransform ScaleX=".75" ScaleY=".75"/>
                                                </FontIcon.RenderTransform>
                                            </FontIcon>
                                        </Grid>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>
                        </StackPanel>
                        <StackPanel x:ConnectionId='5' x:Name="GroupButtonAnswerReject"                                                                                                                      Orientation="Horizontal" Spacing="4"  MaxWidth="290"  HorizontalAlignment="Stretch">
                            <Button x:ConnectionId='12'                                              Style="{StaticResource CornerButtonStyle }">
                                <Button.ContentTemplate >
                                    <DataTemplate>
                                        <Grid Width="50">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="20"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="Поднять" Grid.Row="1" HorizontalAlignment="Center" FontSize="10"/>
                                            <FontIcon Grid.Row="0" FontFamily="Segoe MDL2 Assets" Glyph="&#xE717;" RenderTransformOrigin="0.5,0.5"  Foreground="Green">
                                                <FontIcon.RenderTransform>
                                                    <CompositeTransform ScaleX=".75" ScaleY=".75"/>
                                                </FontIcon.RenderTransform>
                                            </FontIcon>
                                        </Grid>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>
                            <Button x:ConnectionId='13'                                               Style="{StaticResource CornerButtonStyle }">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <Grid Width="50">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="20"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="Отклонить" Grid.Row="1" HorizontalAlignment="Center"  FontSize="10"/>
                                            <FontIcon Grid.Column="0" FontFamily="Segoe MDL2 Assets" Glyph="&#xE778;" RenderTransformOrigin="0.5,0.5" Foreground="Red">
                                                <FontIcon.RenderTransform>
                                                    <CompositeTransform ScaleX=".75" ScaleY=".75"/>
                                                </FontIcon.RenderTransform>
                                            </FontIcon>
                                        </Grid>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>
                        </StackPanel>
                        <StackPanel x:ConnectionId='6' HorizontalAlignment="Left" MaxWidth="290"                                                                                                                 >
                            <Grid x:ConnectionId='7'                                    >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="9*"/>
                                </Grid.ColumnDefinitions>
                                <FontIcon Grid.Column="0" FontFamily="Segoe MDL2 Assets" Glyph="&#xE994;" RenderTransformOrigin="0.5,0.5" >
                                    <FontIcon.RenderTransform>
                                        <CompositeTransform ScaleX=".75" ScaleY=".75"/>
                                    </FontIcon.RenderTransform>
                                </FontIcon>
                                <Slider x:ConnectionId='11' Name="SliderVolumeSound" Grid.Column="1" Minimum="0.0" Maximum="1.0" StepFrequency="0.1"                                                          />
                            </Grid>
                            <Grid x:ConnectionId='8'                                    >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="9*"/>
                                </Grid.ColumnDefinitions>
                                <FontIcon Grid.Column="0" FontFamily="Segoe MDL2 Assets" Glyph="&#xF12E;" RenderTransformOrigin="0.5,0.5" >
                                    <FontIcon.RenderTransform>
                                        <CompositeTransform ScaleX=".75" ScaleY=".75"/>
                                    </FontIcon.RenderTransform>
                                </FontIcon>
                                <Slider x:ConnectionId='10' Name="SliderVolumeMicrophone" Grid.Column="1" Minimum="0.0" Maximum="1.0" StepFrequency="0.1"                                                               />
                            </Grid>
                            <TextBox x:ConnectionId='9' Name="CallTimeDuration" HorizontalTextAlignment="Left" Header="Время звонка (с)"                                                       />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</UserControl>

