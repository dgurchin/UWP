<UserControl x:ConnectionId='1'
    x:Class="Inventory.Views.AudioParameters"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Inventory.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" Style="{StaticResource FormsSection}" Margin="0 6 0 12" Text="Устройства ввода/вывода"/>
        
        <StackPanel Grid.Row="1" Grid.Column="0" MinWidth="350" Spacing="2">
            <controls:FormComboBox x:ConnectionId='5' Header="Устройство воспроизведения"                                                  
                                                                                                   
                                   SelectedValuePath="Name" DisplayMemberPath="Name"
                                   HorizontalAlignment="Stretch" Margin="0 0 6 0"/>
            <controls:FormComboBox x:ConnectionId='6' Header="Микрофон"                                                    
                                                                                                      
                                   SelectedValuePath="Name" DisplayMemberPath="Name"
                                   HorizontalAlignment="Stretch" Margin="0 0 6 0"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <controls:FormComboBox x:ConnectionId='3' Header="Звонок"                                                
                                                                                                  
                                   SelectedValuePath="Name" DisplayMemberPath="Name"
                                   HorizontalAlignment="Stretch" Margin="0 0 6 0"/>
            <ToggleSwitch x:ConnectionId='4' OnContent="Да" OffContent="Нет" Margin="0 0 6 0"
                                                                                                                                   >
                <ToggleSwitch.Header>
                    <TextBlock Foreground="{StaticResource SystemAccentColor}">Включить эхоподавление</TextBlock>
                </ToggleSwitch.Header>
            </ToggleSwitch>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2">
            <Button x:ConnectionId='2' Content="Сохранить."                                                        Margin="0 6 0 0" />
        </StackPanel>
    </Grid>
</UserControl>

