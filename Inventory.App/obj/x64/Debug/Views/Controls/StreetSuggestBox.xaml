<UserControl x:ConnectionId='1'
    x:Class="Inventory.Controls.StreetSuggestBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Inventory.Models"
    xmlns:controls="using:Inventory.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <DataTemplate x:Key="ItemTemplate"                                >
            <Grid x:ConnectionId='2'>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Margin="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="4px"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:ConnectionId='3' Grid.Column="0"                                           FontSize="13" Foreground="#666" />
                    <TextBlock x:ConnectionId='4' Grid.Column="2"                      FontSize="14" />
                </Grid>
                
                <Border Margin="4,-1" Grid.ColumnSpan="2" BorderBrush="LightGray" BorderThickness="0,0,0,1" />
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <controls:FormAutoSuggestBox x:ConnectionId='5' x:Name="suggestBox"
                                                                          
                                 ItemTemplate="{StaticResource ItemTemplate}"
                                 ItemContainerStyle="{StaticResource RowItemStyle}"
                                 Header="Улица"
                                                                                
                                 PlaceholderText="Поиск улицы"
                                 TextMemberPath="FullName"
                                 AutoMaximizeSuggestionArea="False"
                                                            
                                                                      
                                                                              />
</UserControl>

