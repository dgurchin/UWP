<UserControl x:ConnectionId='1'
    x:Class="Inventory.Views.DishCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="320" d:DesignHeight="600">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="12,6">
            <StackPanel Margin="0,12">
                <Grid  Margin="6" Height="180">
                    <Grid Background="LightGray">
                        <Image x:ConnectionId='11'                                                                                                      
                           Stretch="UniformToFill" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" />
                    </Grid>
                    <Button x:ConnectionId='8' Padding="0" BorderThickness="1" BorderBrush="White" Background="Transparent"                                                
                        HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                               >
                        <Grid>
                            <Rectangle Fill="White" Opacity="0.75" />
                            <TextBlock x:ConnectionId='9' Text="Редактировать фото" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"                                                        />
                            <Image x:ConnectionId='10'                                                                                                              
                               Stretch="UniformToFill" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                                                                                                                                                   />
                        </Grid>
                    </Button>
                </Grid>
                <TextBlock x:ConnectionId='7' Style="{StaticResource CardSuperHeader}" 
                                                                  
                           TextAlignment="Center" />
            </StackPanel>

            <Rectangle Style="{StaticResource CardSeparator}"/>
            <TextBlock>DishCard.xaml</TextBlock>
            <TextBlock Style="{StaticResource CardSection}" Text="Общий" />

            <TextBlock Style="{StaticResource CardHeader}" Text="ID блюда" />
            <TextBlock x:ConnectionId='2' Style="{StaticResource CardText}"                                      />

            <TextBlock Style="{StaticResource CardHeader}" Text="Группа" />
            <TextBlock x:ConnectionId='3' Style="{StaticResource CardText}"                                                   />

            <TextBlock Style="{StaticResource CardHeader}" Text="Создан" />
            <TextBlock x:ConnectionId='4' Style="{StaticResource CardText}"                                                                                                         />
            
            <TextBlock Style="{StaticResource CardHeader}" Text="Последнее обновление" />
            <TextBlock x:ConnectionId='5' Style="{StaticResource CardText}"                                                                                                              />

            <Rectangle Style="{StaticResource CardSeparator}"/>
            <TextBlock Style="{StaticResource CardSection}" Text="Цена"  />

            <TextBlock Style="{StaticResource CardHeader}" Text="Прайс" />
            <TextBlock x:ConnectionId='6' Style="{StaticResource CardText}"                                         />
        </StackPanel>
    </ScrollViewer>
</UserControl>

