<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="PlainButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonRevealStyle}">
        <Setter Property="Padding" Value="0" />
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    <Style x:Key="CornerButtonStyle" TargetType="Button"  BasedOn="{StaticResource ButtonRevealStyle}">
        <Setter Property="CornerRadius" Value="6 6 6 6" />
    </Style>
</ResourceDictionary>

